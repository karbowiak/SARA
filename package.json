{
  "name": "bot",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "cli": "bun cli.ts",
    "discord": "bun cli.ts discord",
    "slack": "bun cli.ts slack",
    "dev": "nodemon --exec 'bun cli.ts discord' --ext ts --watch app --watch bot --watch core --watch config.ts",
    "dev:debug": "nodemon --exec 'bun cli.ts discord --debug' --ext ts --watch app --watch bot --watch core --watch config.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun test",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@immich/sdk": "^2.5.2",
    "@mozilla/readability": "^0.6.0",
    "@slack/bolt": "^4.6.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.6.2",
    "discord.js": "^14.25.1",
    "instagram-private-api": "^1.46.1",
    "instagram-url-direct": "^2.0.7",
    "linkedom": "^0.18.12",
    "sharp": "^0.34.5",
    "zod": "^4.3.6"
  }
}
